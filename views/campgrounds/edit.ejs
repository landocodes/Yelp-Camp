<% layout('layouts/boilerplate') %> 
  <h1>Edit Campground</h1>
  <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
    <div>
      <label for="title">Title</label>
      <input type="text" name="campground[title]" value= "<%=campground.title%>" id="title">
    </div>
    <div>
      <label for="location">Location</label>
      <input type="text" name="campground[location]" value="<%=campground.location%>" id="location">
      <br>
      <button>Update Campground</button>
      <br>
     <a href="/campgrounds/<%= campground._id%>">Back to Campgrounds</a>
    </div>
  </form>

  <div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
      <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="needs-validation" novalidate >
        <div class='mmb-3' >
          <label class='form-label' for="title">Title</label>
          <input class='form-control' type="text" name="campground[title]" value= "<%=campground.title%>" id="title" required>
        <div class="valid-feedback">
          looks good
        </div>
        </div>
        <div class='mb-3' >
          <label class='form-label' for="location">Location</label>
          <input class='form-control'  type="text" name="campground[location]" value="<%=campground.location%>"  id="location" required>
        <div class="valid-feedback">
          looks good
        </div>
        </div >
        <div class='mb-3' >
          <label class='form-label' for="image">Image url</label>
          <input class='form-control'  type="text" name="campground[image]" value="<%=campground.image%>" id="image" required>
          <div class="valid-feedback">
            looks good
          </div>
        <div class="mb-3">
          <label class='form-label' for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input type="text" class="form-control" id="price" value="<%=campground.price%>" placeholder='0.00' aria-label="price" required>
          <div class="valid-feedback">
            looks good
          </div>
        </div>
      </div>
        <div class='mb-3' >
          <label class='form-label' for="location">Location</label>
          <textarea class='form-control'  type="text" name="campground[description]" id="description"  required> <%= campground.description %> 
          </textarea>
          <div class="valid-feedback">
            looks good
          </div>
        </div >
          <br>
        <div class= mb-3>
          <button class="btn btn-info">Update Campground</button>
        </div>


        <a href="/campgrounds/<%= campground._id%>">Back to Campgrounds</a>
        </div>
      </form>
    </div>
  </div>
  